@model Tour_Web.Models.DTO.CountryDTO

<form asp-action="DeleteCountry">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Country</h1>
        <hr />
        <input hidden asp-for="Id" />
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" disabled />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="Contenent" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <textarea asp-for="Contenent" class="form-control" rows="5" disabled></textarea>
                <span asp-validation-for="Contenent" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" disabled />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">

                <a asp-action="IndexCountry" asp-controller="Country" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>



        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}