@model IEnumerable<Tour_Web.Models.DTO.CountryDTO>

<br />

<div class="container p-4 border">
    <div class="col">
        <h1 class="text-primary">Country List</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-controller="Country" asp-action="CreateCountry" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New Country</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Contenent
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Contenent</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Country" asp-action="UpdateCountry" asp-route-countryId="@item.Id"><i class="bi bi-pencil-square"></i></a>

                        <a class="btn btn-danger" asp-controller="Country" asp-action="DeleteCountry" asp-route-countryId="@item.Id"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>