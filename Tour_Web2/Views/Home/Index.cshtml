@using Microsoft.AspNetCore.Components

@model IEnumerable<Tour_Web.Models.DTO.CountryDTO>

<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach (var country in Model)
    {
        <div class="p-4 col-md-12 col-lg-6">
            <div class="row" style="border-radius:20px; border: 1px solid #ffffff">
                <div class="col-4">
                    <img class="d-block w-100" style="border-radius:20px;" asp-append-version="true" src="@country.ImageUrl" alt="First slide" />
                </div>
                <div class="col-8">
                    <p class="card-title text-warning" style="font-size:xx-large">@country.Name</p>
                    <p class="card-text">
                        @((MarkupString)country.Description)
                    </p>
                </div>
                <div class="col-12">
                    <div class="row pb-3 pt-2">
                        <div class="col-4">
                            <a href="" class="btn btn-success from-control btn-block">Book</a>
                        </div>
                        <div class="col-4">
                            <span class="">Content: @country.Contenent </span><br />
                        </div>
                        <div class="col-4">
                            <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                USD
                               </span>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    }
</div>