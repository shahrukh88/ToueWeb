@model IEnumerable<Tour_Web.Models.DTO.CityDTO>

<br />

<div class="container p-4 border">
    <div class="col">
        <h1 class="text-primary">City List</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-controller="City" asp-action="CreateCity" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New City</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                  Country  Name
                </th>
                <th>
                    City  Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Contenent
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Country.Name</td>
                    <td>@item.CityName</td>
                    <td>@item.CityDescription</td>
                    <td>@item.CityImageUrl</td>
                    <td>
                        <a class="btn btn-success" asp-controller="City" asp-action="UpdateCity" asp-route-cityNumber="@item.CityNumber"><i class="bi bi-pencil-square"></i></a>

                        ./ <a class="btn btn-danger" asp-controller="City" asp-action="DeleteCity" asp-route-cityNumber="@item.CityNumber"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>